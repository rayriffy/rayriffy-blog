@import '../../core/styles/commons.styl'

.shell-footer
  padding getSpace(4) getSpace(5) getSpace(4) getSpace(5)
  @media (min-width: 52em)
    padding getSpace(4) getSpace(6) getSpace(4) getSpace(6)
  @media (min-width: 64em)
    padding getSpace(4) getSpace(7) getSpace(4) getSpace(7)
  & > .logo-container
    padding getSpace(2)
    & > a > .logo
      width 32px
      height auto
  & > .tabstack-container
    display flex
    justify-content left
    flex-wrap flex
    padding getSpace(4) 0
    & > .tab-container
      padding getSpace(3) 0
      widthCalculator(1)
      @media (min-width: 40em)
        widthCalculator(1 / 2)
      @media (min-width: 64em)
        widthCalculator(1 / 3)
      & > .tabtitle
        padding-bottom getSpace(3)
        font-size 14px
        getFontFamily('heading')
        @media (prefers-color-scheme: dark)
          color rgb(255, 255, 255)
      & > .link-container
        display flex
        flex-wrap wrap
        & > .link
          widthCalculator(1)
          padding getSpace(2)
          & > a
            getFontColor(lightColor: true)
            font-size 16px
  & > .copyright
    padding getSpace(2) 0 getSpace(5) 0
    getFontColor(lightColor: true)
